<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/activity_main">

    <fragment
        android:id="@+id/activity_main"
        android:name="com.example.pcs.ExplorePage"
        android:label="Menu principal"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/navigation_favoris"
        android:name="com.example.pcs.FavorisPage"
        android:label="Page de favoris"
        tools:layout="@layout/favoris_page" />

    <fragment
        android:id="@+id/navigation_voyages"
        android:name="com.example.pcs.VoyagePage"
        android:label="Voyages"
        tools:layout="@layout/voyage_page" />

    <fragment
        android:id="@+id/navigation_messages"
        android:name="com.example.pcs.MessagesPage"
        android:label="Messages"
        tools:layout="@layout/messages_page" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.pcs.ProfilePage"
        android:label="Profil"
        tools:layout="@layout/profile_page" />


</navigation>